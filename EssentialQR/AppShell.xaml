<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EssentialQR.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EssentialQR"
    xmlns:pages="clr-namespace:EssentialQR.Views">
    <TabBar>

        <Tab 
             Title="Scanner">
            <ShellContent
                            ContentTemplate="{DataTemplate pages:ScannerPage}"
                            Route="ScannerPage" />
        </Tab>
        <Tab 
             Title="History">
            <ShellContent
                            ContentTemplate="{DataTemplate pages:HistoryPage}"
                            Route="MainPage" />

        </Tab>
    </TabBar>

</Shell>
